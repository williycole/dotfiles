{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 4,
    "lineWidth": 120,
    "quoteStyle": "single",
    "trailingComma": "es5"
  },
  "organizeImports": {
    "enabled": true,
    "order": ["type-imports", "value-imports", "side-effect-imports"],
    "groupBy": {
      "type": "name",
      "order": "asc"
    },
    "layout": {
      "type": "vertical",
      "separator": "\n"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "files": ["*.gql", "*.json", "*.jsonc", "*.yaml"],
      "formatter": {
        "indentWidth": 2
      }
    }
  ]
}
